{
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended",
    "next",
    "prettier"
  ],
  "rules": {
    "prettier/prettier": [
      "warn",
      {},
      { "usePrettierrc": true }
    ],
    "no-undef": "off",
    "no-unused-vars": "warn",
    "react-hooks/exhaustive-deps": "off",
    "@next/next/no-img-element": "off"
  },
  "settings": {
    "next": {
      "rootDir": "./src"
    }
  },
  "env": {
    "jest": true
  }
}
